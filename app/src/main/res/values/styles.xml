<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:textViewStyle">@style/MyDefaultText</item>
        <item name="buttonStyle">@style/MyButton</item>
    </style>

    <style name="MyDefaultText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MyTitleText" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">60sp</item>
    </style>

    <style name="MyButton" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
